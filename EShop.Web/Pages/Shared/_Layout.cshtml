@using System.Security.Claims
@using EShop.Application.Interfaces
@using EShop.Domain.Entities
@inject ICartService cartService
@inject IHttpContextAccessor accessor

@{
    Layout = null;
    string cookie = accessor.HttpContext.Request.Cookies["guest_cart"];
    int cartCount = 0;

    if (User.Identity.IsAuthenticated)
    {
        cartCount = await cartService.GetUserCartCount(int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value));
    }
    else if (!string.IsNullOrEmpty(cookie))
    {
        var items = System.Text.Json.JsonSerializer.Deserialize<List<GuestCartItem>>(cookie);
        cartCount = items.Sum(x => x.Count);
    }
}

