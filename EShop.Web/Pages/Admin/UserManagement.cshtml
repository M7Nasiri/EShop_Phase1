@page "/Admin/UManagement"
@model EShop.Web.Pages.Admin.UserManagementModel
@{
    Layout = "_AdminPageLayout";
    ViewData["Title"] = "مدیریت کاربران";
}

<div class="container mt-4">

    <h3 class="mb-4">مدیریت کاربران</h3>

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>شناسه</th>
                <th>نام کاربری</th>
                <th>نام کامل</th>
                <th>نقش</th>
                <th>سفارش‌ها</th>
                <th>اعتبار کیف پول</th>
                <th>عملیات</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>

                    <td>@user.UserName</td>

                    <td>@user.FullName</td>

                    <td>
                        @if (user.Role.ToString() == "Admin")
                        {
                            <span class="badge bg-danger">ادمین</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">کاربر</span>
                        }
                    </td>

                    <td>
                        <span class="badge bg-success">@user.OrdersCount</span>
                    </td>

                    <td>@user.Credit.ToString("N0") تومان</td>

                    <td>
                        <a asp-page="/User/Details"
                           asp-route-id="@user.Id"
                           class="btn btn-sm btn-info text-white">
                            جزئیات
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
