@page
@model EShop.Web.Pages.Account.RegisterModel
@{
}

<form method="post" asp-page="Register">

    <div class="mb-3">
        <label class="form-label">نام کاربری</label>
        <input type="text" asp-for="model.UserName" class="form-control" />
        <span asp-validation-for="model.UserName" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">نام کامل</label>
        <input type="text" asp-for="model.FullName" class="form-control" />
        <span asp-validation-for="model.FullName" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">ایمیل</label>
        <input type="text" asp-for="model.Email" class="form-control" />
        <span asp-validation-for="model.Email" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label for="Role">دسته‌بندی</label>
        <select class="form-control" asp-for="model.Role">
            <option value="User">کاربر عادی</option>
        </select>
    </div>
    
    <div class="mb-3">
        <label class="form-label">رمز عبور</label>
        <input type="password" asp-for="model.Password" class="form-control" />
        <span asp-validation-for="model.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">تکرار رمز عبور</label>
        <input type="password" asp-for="model.RePassword" class="form-control" />
        <span asp-validation-for="model.RePassword" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">ثبت نام</button>
    <div class="form-group">
        <a asp-page="/Account/Login">آیا ثبت نام ، کرده اید ؟ ورود</a>
    </div>
</form>